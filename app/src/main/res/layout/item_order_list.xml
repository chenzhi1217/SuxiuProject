<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="presenter"
                  type="com.suxiunet.repair.businiss.order.orderlist.presenter.OrderListPresenter"/>
        <variable name="data"
                  type="com.suxiunet.data.entity.order.OrderInfoEntity"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_bg"
        android:onClick="@{() ->presenter.goOrderDetail(data)}"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginRight="@dimen/right_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:background="@drawable/shape_corners_white"
            android:orientation="vertical">

            <!--头部信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:text="订单号："
                        android:textColor="@color/color_black"
                        android:textSize="16dp"/>
                    
                    <TextView
                        android:id="@+id/tv_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left_margin"
                        tools:text="@{data.orderNo}"
                        android:textColor="@color/color_black"
                        android:textSize="16dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order_creat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginTop="5dp"
                    tools:text="@{data.creatTime}"/>

            </LinearLayout>

            <include layout="@layout/include_common_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/bottom_margin">

                <!--设备类型-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_order_list_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:text="机器类型"
                        android:textColor="@color/color_text_2"
                        android:textSize="@dimen/title_four"/>
                    <TextView
                        android:id="@+id/tv_item_order_equit_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="台式机"
                        android:textColor="@color/color_text_2"
                        android:textSize="@dimen/title_four"/>


                </RelativeLayout>
                
                <!--设备型号-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_order_list_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:text="机器型号"
                        android:textColor="@color/color_text_2"
                        android:textSize="@dimen/title_four"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{data.machineType}"
                        android:textColor="@color/color_text_2"
                        android:textSize="@dimen/title_four"/>


                </RelativeLayout>

                <!--故障描述-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_order_list_height">

                    <TextView
                        android:id="@+id/tv_desc_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:text="故障描述"
                        android:textColor="@color/color_text_2"
                        android:textSize="@dimen/title_four"/>

                    <TextView
                        android:layout_toRightOf="@id/tv_desc_title"
                        android:id="@+id/item_refund_record_pay_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:gravity="right"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="@{data.faultDesc}"
                        android:textColor="@color/color_text_3"
                        android:textSize="@dimen/title_four"/>


                </RelativeLayout>

                <!--预约时间-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_order_list_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:text="预约时间"
                        android:textColor="@color/color_text_2"
                        android:textSize="@dimen/title_four"/>

                    <TextView
                        android:id="@+id/refund_record_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{data.appointmentTime}"
                        android:textColor="@color/color_text_3"
                        android:textSize="@dimen/title_four"/>


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>